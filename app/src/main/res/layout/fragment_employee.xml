<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="Search ID Employee"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/tv_hint_searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/searchview_employee"
            app:layout_constraintBottom_toBottomOf="@id/searchview_employee"
            android:gravity="center"
            android:text="Search ID Employee"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_example"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/searchview_employee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_employee_recyclerview"
            />
        <com.example.paxeltest.customview.BlankLayout
            android:id="@+id/blanklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/searchview_employee"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <variable
            name="data"
            type="com.example.paxeltest.ui.employee.EmployeeViewModel" />
    </data>
</layout>